{
    "extends": "@tsconfig/node22/tsconfig.json",
    "compilerOptions": {
        "baseUrl": "./src",
        "outDir": "./dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": false,
        "skipLibCheck": true,
        "types": ["node", "jest"],
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
    },
    "include": ["src"]
}